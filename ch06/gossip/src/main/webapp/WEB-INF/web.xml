<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>USERS</param-name>
        <param-value>D:\common\temp\users</param-value>
    </context-param>
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <default-content-type>text/html</default-content-type>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>index</servlet-name>
        <jsp-file>/WEB-INF/controller/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern/>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/WEB-INF/controller/register.jsp</jsp-file>
        <init-param>
            <param-name>SUCCESS_PATH</param-name>
            <param-value>/WEB-INF/jsp/register_success.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>FORM_PATH</param-name>
            <param-value>/WEB-INF/jsp/register.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/WEB-INF/controller/login.jsp</jsp-file>
        <init-param>
            <param-name>SUCCESS_PATH</param-name>
            <param-value>member</param-value>
        </init-param>
        <init-param>
            <param-name>LOGIN_PATH</param-name>
            <param-value>/WEB-INF/jsp/index.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <jsp-file>/WEB-INF/controller/loginout.jsp</jsp-file>
        <init-param>
            <param-name>LOGIN_PATH</param-name>
            <param-value>/gossip</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>member</servlet-name>
        <jsp-file>/WEB-INF/controller/member.jsp</jsp-file>
        <init-param>
            <param-name>MEMBER_PATH</param-name>
            <param-value>/WEB-INF/jsp/member.jsp</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>member</servlet-name>
        <url-pattern>/member</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>new_message</servlet-name>
        <jsp-file>/WEB-INF/controller/new_message.jsp</jsp-file>
        <init-param>
            <param-name>LOGIN_PATH</param-name>
            <param-value>/gossip</param-value>
        </init-param>
        <init-param>
            <param-name>MEMBER_PATH</param-name>
            <param-value>member</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>new_message</servlet-name>
        <url-pattern>/new_message</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>del_message</servlet-name>
        <jsp-file>/WEB-INF/controller/del_message.jsp</jsp-file>
        <init-param>
            <param-name>LOGIN_PATH</param-name>
            <param-value>/gossip</param-value>
        </init-param>
        <init-param>
            <param-name>MEMBER_PATH</param-name>
            <param-value>member</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>del_message</servlet-name>
        <url-pattern>/del_message</url-pattern>
    </servlet-mapping>
</web-app>